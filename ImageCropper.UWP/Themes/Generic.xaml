<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImageCropper.UWP">
    <Style x:Key="DragButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="20" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Ellipse
                        Fill="White"
                        RenderTransformOrigin="0.5,0.5"
                        Stroke="Gray"
                        StrokeThickness="1">
                        <Ellipse.RenderTransform>
                            <CompositeTransform TranslateX="-10" TranslateY="-10" />
                        </Ellipse.RenderTransform>
                    </Ellipse>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="local:ImageCropper" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ImageCropper">
                    <Grid x:Name="PART_LayoutGrid" Padding="80">
                        <Canvas x:Name="PART_ImageCanvas">
                            <Image
                                x:Name="PART_SourceImage"
                                RenderTransform="{TemplateBinding ImageTransform}"
                                Source="{TemplateBinding SourceImage}" />
                            <Path
                                Data="{TemplateBinding MaskArea}"
                                Fill="Black"
                                Opacity="0.8"
                                Stroke="White"
                                StrokeThickness="1" />
                            <Button
                                x:Name="PART_TopLeftCorner"
                                Canvas.Left="{TemplateBinding X1}"
                                Canvas.Top="{TemplateBinding Y1}"
                                Style="{StaticResource DragButtonStyle}"/>
                            <Button
                                x:Name="PART_TopRightCorner"
                                Canvas.Left="{TemplateBinding X2}"
                                Canvas.Top="{TemplateBinding Y1}"
                                Style="{StaticResource DragButtonStyle}"/>
                            <Button
                                x:Name="PART_BottomLeftCorner"
                                Canvas.Left="{TemplateBinding X1}"
                                Canvas.Top="{TemplateBinding Y2}"
                                Style="{StaticResource DragButtonStyle}"/>
                            <Button
                                x:Name="PART_BottomRightCorner"
                                Canvas.Left="{TemplateBinding X2}"
                                Canvas.Top="{TemplateBinding Y2}"
                                Style="{StaticResource DragButtonStyle}"/>
                        </Canvas>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
